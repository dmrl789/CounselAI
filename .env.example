# Counsel AI - Environment Configuration Template
# Copy this file to .env and update with your production values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure API key (32+ characters)
API_KEY=counsel-ai-your-secure-api-key-here

# Generate a secure encryption key (32+ characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI API key for online reasoning (optional)
OPENAI_API_KEY=your-openai-api-key-here

# GPT model to use (gpt-4, gpt-3.5-turbo, etc.)
GPT_MODEL=gpt-4

# Local model path for offline operation
LOCAL_MODEL_PATH=/models/mistral-7b-instruct.Q4_K_M.gguf

# =============================================================================
# INFRASTRUCTURE CONFIGURATION
# =============================================================================
# Server binding address
BIND_ADDR=0.0.0.0:5142

# Vector database URL
VECTOR_DB_URL=http://qdrant:6333

# Encrypted storage path
STORAGE_PATH=/data/encrypted

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Requests per second
RATE_LIMIT_PER_SECOND=10

# Burst size for rate limiting
RATE_LIMIT_BURST_SIZE=20

# Maximum request size in bytes (1MB default)
MAX_REQUEST_SIZE=1048576

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable compression
ENABLE_COMPRESSION=true

# Enable CORS
ENABLE_CORS=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana admin password
GRAFANA_PASSWORD=your-grafana-password-here

# Redis password
REDIS_PASSWORD=counsel-ai-redis-password-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/counsel_ai

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development mode
DEVELOPMENT=false

# Enable debug mode
DEBUG=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup storage path
BACKUP_PATH=/backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL certificate path
SSL_CERT_PATH=/etc/ssl/certs/counsel-ai.crt

# SSL private key path
SSL_KEY_PATH=/etc/ssl/private/counsel-ai.key

# Enable HTTPS
ENABLE_HTTPS=false