{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../ui-desktop/dist"
  },
  "package": {
    "productName": "Counsel AI",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "⚖️ Counsel AI",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "writeFile": true
      },
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "updater": {
      "active": false
    },
    "bundle": {
      "identifier": "org.ippan.counselai",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/32x32.png",
        "icons/128x128.png"
      ]
    }
  }
}
